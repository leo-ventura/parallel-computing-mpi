{
    "tasks": [
        {
            "type": "shell",
            "label": "Build using Makefile",
            "command": "/usr/bin/make",
            "args": [
                "debug",
                "DEBUG_PROG=${fileBasenameNoExtension}",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}